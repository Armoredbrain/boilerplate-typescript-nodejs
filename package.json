{
  "name": "boilerplate_nodejs",
  "version": "1.0.0",
  "description": "Simple boilerplate for backend services",
  "main": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": "18.16.0"
  },
  "scripts": {
    "build": "tsc --project ./",
    "husky:check": "node --require ts-node/register ./checkIfHuskyExists",
    "husky:setup": "node --require ts-node/register ./prepare",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.{ts,json}",
    "prettier:fix": "prettier --write **/*.{ts,json}",
    "start": "yarn husky:check && nodemon -L ./src/index.ts",
    "swagger:gen": "npx swagger-typescript-api -p ./src/swagger/swagger.json -o ./src/swagger/api -t ./src/swagger/templates/modular --modular",
    "swagger:bundle": "npx swagger-cli bundle ./src/swagger/baseApi.json --outfile ./src/swagger/swagger.json --type json",
    "swagger:full": "yarn swagger:bundle && yarn swagger:gen && yarn prettier:fix",
    "test": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose",
    "test:coverage": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose --coverage",
    "test:watch": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose --watch"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.1",
    "@types/morgan": "1.9.4",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "cross-env": "7.0.3",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "helmet": "7.0.0",
    "morgan": "1.10.0",
    "swagger-ui-express": "4.6.3",
    "winston": "3.8.2"
  },
  "keywords": [],
  "author": ""
}
